# Configuration E-CMS
# Copier ce fichier vers .env et adapter les valeurs

# Django
DEBUG=True
SECRET_KEY=change-me-to-a-secure-random-key
ALLOWED_HOSTS=localhost,127.0.0.1

# Base de données (PostgreSQL pour production)
# DATABASE_URL=postgres://user:password@localhost:5432/ecms_db

# Email SMTP
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@ecms.cm
EMAIL_HOST_PASSWORD=your-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=E-CMS <noreply@ecms.cm>

# Stockage fichiers (production)
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_STORAGE_BUCKET_NAME=ecms-media
# AWS_S3_REGION_NAME=eu-west-1

# Sentry (monitoring erreurs)
# SENTRY_DSN=https://xxx@sentry.io/xxx

# Redis (cache/sessions)
# REDIS_URL=redis://localhost:6379/0

# Celery (tâches asynchrones)
# CELERY_BROKER_URL=redis://localhost:6379/1
